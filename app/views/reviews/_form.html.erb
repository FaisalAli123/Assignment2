<!-- Form for reviews -->
<%= simple_form_for([@game, @game.reviews.build]) do |f| %>
<!-- Validation for reviews -->
  <% if @review.errors.any? %>
  <ul>
   <% @review.errors.full_messages.each do |message| %>
   <li>
     <%= message %>
    </li>
  <% end %>
  </ul>
  <% end %>

  <div id="rating-form">
    <label>Rating</label>
  </div>
  <%= f.input :comment %>
  <%= f.button :submit %>
<% end %>


<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
