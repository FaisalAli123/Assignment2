<!-- Display review rating -->
<div class="review-rating" data-score="<%= review.rating %>"></div>
<p><%= review.comment %></p>
<!-- If user is signed in they can edit and delete reviews -->
<% if user_signed_in?%>

  <% if review.user_id == current_user.id %>

    <%= link_to "Edit", edit_game_review_path(review.game, review) %>
    <%= link_to "Delete", game_review_path(review.game, review), method: :delete, data: {confirm: "Are You Sure?" }%>

    <% end %>
<hr>
<% end %>
